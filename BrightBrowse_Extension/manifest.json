{
    "manifest_version": 2,
    "name": "BrightBrowse",
    "version": "1.0",
    "description": "Detects and reports dark patterns on the web.",
    "icons": {
      "48": "assets/icons/logo.png",
      "96": "assets/icons/logo.png"
    },
    "permissions": [
      "activeTab",
      "notifications",
      "storage"
    ],
    "background": {
      "scripts": ["scripts/background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/splash.js", "scripts/main.js", "scripts/onboardingjs"]
      }
    ],
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "pages/splash.html",
        "default_width": 360,
        "default_height": 560
      },
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    }
}