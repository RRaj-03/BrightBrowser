{
    "manifest_version": 2,
    "name": "BrightBrowse",
    "version": "1.0",
    "description": "Detects and reports dark patterns on the web.",
    "icons": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },
    "permissions": [
      "activeTab",
      "notifications",
      "storage"
      // Add any other permissions you need.
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "SplashPage.html"
      },
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    }
  }